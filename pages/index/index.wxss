/**index.wxss**/

.banner {
  width: 100%;
}

.membercard {
  height: 342rpx;
  width: 704rpx;
  border-radius: 30rpx;
  margin-top: 32rpx;
  color: #FFF;
  background: linear-gradient(to right, #d44328, #ff5610);
  /* 标准的语法 */
}

.membercard-avatar {
  width: 106rpx;
  height: 106rpx;
  margin: 48rpx 0 0 16rpx;
  border-radius: 50%;
  vertical-align: bottom;
}

.membercard-info {
  display: inline-block;
  margin-left: 28rpx;
}

.membercard-info text {
  display: block;
  font-size: 30rpx;
  font-weight: 400;
}

.membercard-jifen {
  margin: 100rpx 0 0 420rpx;
}

.membercard-jifen text:nth-of-type(1) {
  font-size: 30rpx;
  font-weight: 300;
}

.membercard-jifen text:nth-of-type(2) {
  font-size: 52rpx;
  font-weight: 500;
  margin-left: 20rpx;
}

.share {
  margin-top: 38rpx;
  width: 650rpx;
  height: 106rpx;
  background-color: #FFF;
  border-radius: 53rpx;
  box-shadow: 0 0 20rpx 2rpx #bfbfbf;
}

.sharebutton {
  width: 318rpx;
  height: 100%;
  background-color: #d34228;
  border-radius: 53rpx;
  display: inline-block;
}

.sharebutton image {
  width: 50rpx;
  height: 50rpx;
  margin: 28rpx 0 0 53rpx;
  vertical-align: bottom;
}

.sharebutton text {
  font-size: 30rpx;
  margin-left: 22rpx;
  color: #FFF;
}

.jifentext {
  display: inline-block;
  height: 100%;
  vertical-align: top;
  margin-left: 30rpx;
  padding-top: 20rpx;
}

.jifentext text {
  font-size: 20rpx;
  color: #bfbfbf;
  display: block;
}

.news {
  height: 248rpx;
  width: 704rpx;
  border-radius: 30rpx;
  margin: 28rpx 0 28rpx 0;
  box-shadow: 0 0 20rpx 2rpx #bfbfbf;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}